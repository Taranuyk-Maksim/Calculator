<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:type="linear"
                android:endColor="@color/end_click_color"
                android:startColor="@color/start_click_color"
                android:angle="90.0" />
            <corners
                android:radius="@dimen/button_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:type="linear"
                android:endColor="@color/end_operands_button"
                android:startColor="@color/start_operands_button"
                android:angle="90.0" />
            <corners
                android:radius="@dimen/button_radius" />
        </shape>
    </item>
</selector>