<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/control_buttons_radius" />
            <gradient android:type="linear"
                android:endColor="@color/start_control_button"
                android:startColor="@color/end_control_button"
                android:angle="90" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/control_buttons_radius" />
            <gradient android:type="linear"
                android:endColor="@color/end_color_number_button"
                android:startColor="@color/start_color_number_button"
                android:angle="90"/>
        </shape>
    </item>
</selector>