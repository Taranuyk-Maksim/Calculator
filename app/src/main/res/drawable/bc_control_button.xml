<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/control_buttons_radius" />
            <gradient android:type="linear"
                android:endColor="@color/startControl_button"
                android:startColor="@color/endControl_button"
                android:angle="90" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/control_buttons_radius" />
            <gradient android:type="linear"
                android:endColor="@color/endColor_number_button"
                android:startColor="@color/startColor_number_button"
                android:angle="90"/>
        </shape>
    </item>
</selector>