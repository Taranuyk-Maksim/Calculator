<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:type="linear"
                android:endColor="@color/endClick_color"
                android:startColor="@color/startClick_color"
                android:angle="90.0" />
            <corners android:radius="@dimen/button_radius" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient android:type="linear"
                android:endColor="@color/endColor_number_button"
                android:startColor="@color/startColor_number_button"
                android:angle="90" />
            <corners android:radius="@dimen/button_radius" />

        </shape>
    </item>
</selector>